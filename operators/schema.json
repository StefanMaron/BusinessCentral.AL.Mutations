{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BCMutations Operator File",
  "description": "Schema for BCMutations mutation operator definition files",
  "type": "object",
  "required": ["operators"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "operators": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/operator"
      }
    }
  },
  "definitions": {
    "operator": {
      "type": "object",
      "required": ["id", "name", "category", "pattern"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Unique kebab-case identifier for this operator"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable name for this operator"
        },
        "category": {
          "type": "string",
          "enum": [
            "relational",
            "arithmetic",
            "logical",
            "boolean",
            "statement-removal",
            "boundary",
            "control-flow",
            "bc-specific"
          ],
          "description": "Category for grouping and filtering operators"
        },
        "pattern": {
          "type": "string",
          "minLength": 1,
          "description": "Literal string to find in AL source lines"
        },
        "replacement": {
          "type": ["string", "null"],
          "description": "String to substitute. null means comment out the entire line."
        }
      }
    }
  }
}
